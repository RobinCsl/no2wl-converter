{
  "name": "no2wl-converter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-server:dev":
      "nodemon --ignore './src' -e js --exec 'node ./server/index.js'",
    "start-server": "node ./server/index.js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test-react": "export CI=true; react-scripts test --env=jsdom",
    "test-server": "jest ./server",
    "test-server:dev": "jest ./server --watch",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .jsx,.js src/ server/"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "nodemon": "^1.17.3",
    "pre-commit": "^1.2.2",
    "prettier": "1.12.0"
  },
  "pre-commit": ["lint", "test-server", "test-react"]
}
